#!/usr/bin/env python

Import('env')

package = env.GoPack('../goray.a', env.Go('_go_', Glob('*.go')))

subpackages = [
    env.Go('bound', Glob('bound/*.go')),
    env.Go('color', Glob('color/*.go')),
    env.Go('intersect', Glob('intersect/*.go')),
    env.Go('job', Glob('job/*.go')),
    env.Go('kdtree', Glob('kdtree/*.go')),
    env.Go('logging', Glob('logging/*.go')),
    env.Go('matrix', Glob('matrix/*.go')),
    env.Go('montecarlo', Glob('montecarlo/*.go')),
    env.Go('sampleutil', Glob('sampleutil/*.go')),
    env.Go('server', Glob('server/*.go')),
    env.Go('server/urls', Glob('server/urls/*.go')),
    env.Go('shader', Glob('shader/*.go')),
    env.Go('time', Glob('time/*.go')),
    env.Go('vector', Glob('vector/*.go')),
]

subtrees = SConscript(
    [
        'std/SConscript',
    ],
    exports='env',
)
packages = Flatten([package, subpackages, subtrees])

Return('packages')
